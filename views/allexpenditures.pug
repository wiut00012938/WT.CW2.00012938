extends layout.pug

block content
    if success
            p.success New Expenditure is added!
    div.expenditure
        p Current Balance : $#{balance_value.Balance}
        .options
            a(href='/expenditures/new_expenditure')#new-expense Add a new expense
            a(href='/incomes/new_income')#new-income Add a new income
        h1 All Expenditures
        .reverse-turner
            each expenditure in expenditures
                .wrapper
                    h2 #{expenditure.Category}
                    div
                        .expenditure-info
                            div
                                p Created Date: #{expenditure.RegisterDate}
                                p Amount: $#{expenditure.Amount}
                                p Details: #{expenditure.Details}
                            div
                                i.fa-solid(class=`fa-${expenditure.Icon}`)
                        .info-controllers
                            a(href='/delete').info-delete delete the expenditure
                            a(href='/update').info-update update the expenditure

    