extends layout.pug 

block content 
    div.new-income-form
        h1 Add a new income
        form#form.form(action="/incomes/new_income", method="POST")
            label Category
            if categories
                select#category.input(name="category")
                    each category in categories
                        option.input(value = category.value)= category.title
            
            label Amount($)
            span#amount-error
            input#amount.input(type="number",step = 0.01, name ="amount")

            label Details
            textarea#details.input(name="details", cols="30", rows="10") 

            button.input Submit  
    script(src="/static/javascripts/newincome.js" defer) 